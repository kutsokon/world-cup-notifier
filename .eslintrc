{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "rules": {
    "strict": 0,
    "quotes": [2, "single"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "semi": [2, "always"],
    "no-unused-vars": 1,
    "comma-dangle": ["error", "never"],
    "no-use-before-define": ["error", { "functions": false, "classes": false }],
    "import/prefer-default-export": "off"
  }
}
